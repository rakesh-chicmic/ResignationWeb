@if (@Value == 1)
{
    <span class="bg-warning px-1 rounded text-white">Pending</span>
}
else if (@Value == 3)
{
   <span class="bg-success px-1 rounded text-white">Approved</span>
}
else if (@Value == 2)
{
    <span class="px-1 rounded text-white" style="background-color:#17A2B8">Cancelled</span>
}
else if (@Value == 4)
{
   <span class="bg-danger px-1 rounded text-white">Disapproved</span>
}

@code{
    [Parameter]
    public int Value { get; set; }
}